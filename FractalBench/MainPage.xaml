<Page
    x:Class="FractalBench.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Image x:Name="fractalImage" HorizontalAlignment="Left" Height="406" Margin="67,69,0,0" VerticalAlignment="Top" Width="542" Source="/Assets/Square150x150Logo.scale-200.png" Stretch="Fill" />
        <ComboBox x:Name="FractalToGenerate" Margin="1126,174,0,0" Width="272" Height="57" PlaceholderText="Fractal" FontSize="24">
            <ComboBoxItem Content="Mandelbrot"/>
            <ComboBoxItem Content="Snowflake"/>
        </ComboBox>
        <ComboBox x:Name="NoOfThreads" Margin="750,174,0,0" Width="272" Height="57" PlaceholderText="Threads" FontSize="24">
            <ComboBoxItem Content="1"/>
            <ComboBoxItem Content="2"/>
            <ComboBoxItem Content="3"/>
            <ComboBoxItem Content="4"/>
        </ComboBox>
        <TextBlock HorizontalAlignment="Left" Margin="750,119,0,0" Text="Threads to use:" TextWrapping="Wrap" VerticalAlignment="Top" Height="61" Width="288" FontSize="36"/>
        <TextBlock HorizontalAlignment="Left" Margin="1109,119,0,0" Text="Fractal to generate:" TextWrapping="Wrap" VerticalAlignment="Top" Height="61" Width="336" FontSize="36"/>
        <Button x:Name="Render" Content="Render" Margin="824,394,0,0" VerticalAlignment="Top" Height="106" Width="498" FontSize="72" Click="Render_Click"/>
        <Image HorizontalAlignment="Left" Height="100" Margin="496,752,0,0" VerticalAlignment="Top" Width="100"/>
    </Grid>
</Page>